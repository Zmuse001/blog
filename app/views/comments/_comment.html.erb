<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <div>
  <a class="like-Unlike" href="">Like</a> 
  </div> 
  <p>
  <%= link_to "Delete Comment", category_article_comment_path(@category, @article, comment), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
  </p>
<% end %>
